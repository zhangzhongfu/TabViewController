#define ScreenWidth \
([UIScreen mainScreen].bounds.size.width)

#define ScreenHeight \
([UIScreen mainScreen].bounds.size.height)


#pragma mark weak self for block

#if !ZZWeakifySelf
#define ZZWeakifySelf \
__weak __typeof(&*self)zz_weak_object = self

