#define BDBSColorRGBA(r,g,b,a) \
[UIColor colorWithRed:r / 255.0 green:g / 255.0 blue:b / 255.0 alpha:a]

#define RandomColor \
BDBSColorRGBA(random() % 256, random() % 256, random() % 256, 1.0)

